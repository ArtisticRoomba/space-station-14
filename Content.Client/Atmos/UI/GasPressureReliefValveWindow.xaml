<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      SetSize="345 275"
                      MinSize="345 275"
                      Title="{Loc gas-pressure-relief-valve-ui-title}"
                      Resizable="False">

    <BoxContainer Orientation="Vertical">

        <BoxContainer Orientation="Vertical">

            <Label Text="{Loc gas-pressure-relief-valve-ui-outlet}" Align="Center" StyleClasses="LabelKeyText" />
            <Label Name="OutletPressureLabel" Align="Center" />

            <BoxContainer Orientation="Horizontal" Align="Center" Margin="5">
                <BoxContainer Orientation="Vertical" Align="Center" HorizontalExpand="True">
                    <Label Text="{Loc gas-pressure-relief-valve-ui-target}" Align="Right" StyleClasses="LabelKeyText" />
                    <BoxContainer Orientation="Horizontal" HorizontalAlignment="Right">
                        <Label Name="TargetPressureLabel" Margin="0 0 4 0" />
                        <Label Text="{Loc gas-pressure-relief-valve-ui-pressure-unit}" />
                    </BoxContainer>
                </BoxContainer>

                <ProgressBar Name="ToTargetBar" MaxValue="1" SetSize="5 75" Margin="10" Vertical="True" />

                <SpriteView Name="EntityView" SetSize="64 64" Scale="3 3" OverrideDirection="North" Margin="0" />

                <ProgressBar Name="FlowRateBar" MaxValue="1" SetSize="5 75" Margin="10" Vertical="True" />

                <BoxContainer Orientation="Vertical" Align="Center" HorizontalExpand="True">
                    <Label Text="{Loc gas-pressure-relief-valve-ui-flow}" StyleClasses="LabelKeyText" />
                    <BoxContainer Orientation="Horizontal">
                        <Label Name="CurrentFlowLabel" Margin="0 0 4 0" />
                        <Label Text="{Loc gas-pressure-relief-valve-ui-flow-rate-unit}" />
                    </BoxContainer>
                </BoxContainer>
            </BoxContainer>

            <Label Text="{Loc gas-pressure-relief-valve-ui-inlet}" Align="Center" StyleClasses="LabelKeyText" />
            <Label Name="InletPressureLabel" Align="Center" />

        </BoxContainer>

        <!-- Controls to Set Pressure -->
        <controls:StripeBack Name="SetPressureStripeBack" HorizontalExpand="True">
            <BoxContainer Orientation="Vertical" HorizontalExpand="True" Margin="10 10 10 10">
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                    <LineEdit Name="ThresholdInput" HorizontalExpand="True" MinSize="70 0" />
                    <Button Name="SetThresholdButton" Text="{Loc gas-pressure-relief-valve-ui-set-threshold}"
                            Disabled="True" Margin="5 0 0 0" />
                </BoxContainer>

                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="0 5 0 0">
                    <Button Name="Subtract1000Button" Text="{Loc gas-pressure-relief-valve-ui-subtract-1000}"
                            HorizontalExpand="True" Margin="0 2 2 0"
                            StyleClasses="OpenBoth" />
                    <Button Name="Subtract100Button" Text="{Loc gas-pressure-relief-valve-ui-subtract-100}"
                            HorizontalExpand="True" Margin="0 2 2 0"
                            StyleClasses="OpenBoth" />
                    <Button Name="Subtract10Button" Text="{Loc gas-pressure-relief-valve-ui-subtract-10}"
                            HorizontalExpand="True" Margin="0 2 2 0"
                            StyleClasses="OpenBoth" />
                    <Button Name="Add10Button" Text="{Loc gas-pressure-relief-valve-ui-add-10}" HorizontalExpand="True"
                            Margin="0 2 2 0"
                            StyleClasses="OpenBoth" />
                    <Button Name="Add100Button" Text="{Loc gas-pressure-relief-valve-ui-add-100}"
                            HorizontalExpand="True" Margin="0 2 2 0"
                            StyleClasses="OpenBoth" />
                    <Button Name="Add1000Button" Text="{Loc gas-pressure-relief-valve-ui-add-1000}"
                            HorizontalExpand="True" Margin="0 2 2 0"
                            StyleClasses="OpenBoth" />
                </BoxContainer>

                <BoxContainer Orientation="Horizontal" HorizontalExpand="True" Margin="0 5 0 0">
                    <Button Name="ZeroThresholdButton" Text="{Loc gas-pressure-relief-valve-ui-zero-threshold}"
                            HorizontalExpand="True" Margin="0 0 5 0" />
                    <Button Name="SetToCurrentPressureButton"
                            Text="{Loc gas-pressure-relief-valve-ui-set-to-current-pressure}" HorizontalExpand="True" />
                </BoxContainer>
            </BoxContainer>
        </controls:StripeBack>

    </BoxContainer>

</controls:FancyWindow>
